{
  "compilerOptions": {
    "target": "ES6", // Целевая версия JavaScript
    "module": "commonjs", // Система модулей
    "rootDir": "./", // Директория с исходными файлами
    "outDir": "./dist", // Директория для скомпилированных файлов
    "strict": true, // Включение строгого режима
    "esModuleInterop": true, // Включает поддержку модулей ES
    "skipLibCheck": true // Пропуск проверки типов библиотек
  },
  "include": ["**/*", "app.ts"], // Включает все файлы TypeScript в папке src
  "exclude": ["node_modules", "dist"] // Исключает эти папки из компиляции
}